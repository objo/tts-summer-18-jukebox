<h1>Songs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Duration</th>
    <th>Artist</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @songs.each do |song| %>
    <tr>
      <td><%= song.name %></td>
      <td><%= song.duration %></td>
      <td><%= song.artist.name %></td>
      <td><%= link_to "X", edit_song_path(id: song.id) %></td>
      <td><%= link_to "X", song_path(id: song.id), method: :delete %></td>
    </tr>
  <% end %>
</table>

<br>
<%= link_to "New Song", new_song_path %>
